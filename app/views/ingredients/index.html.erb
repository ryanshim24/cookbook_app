<%= render "nav" %>
<%= render "header" %>



<div class="row-center">
  <div class="col-xs-12 newBook">
    <p>Want to add a new Ingredient? <%= link_to('New Ingredeint', new_ingredient_path) %> </p>
  </div>
</div>

<div class="row-center">
  <div class="col-xs-12">
    <h1>The Ingredients</h1>
  </div>
</div>

<div class="row-center" style="margin-left:15px">
  <div class="col-xs-12 ">
    <% @ingredients.each_with_index do |food, index| %>
          <% if(index % 4 == 0) %>
        </div>
          <div class="row-center">

            <div class="col-xs-3 thumbnail">
              <%= image_tag(food.image, width: '150', height: '150') %>
              <h3><%= link_to(food.name, food) %></h3>
              <p>Cost: <%= food.cost %></p>
              <p>Measurements: <%= food.measurement %></p>
            </div>

            <% else %>
              <div class="col-xs-3 thumbnail">
                <%= image_tag(food.image, width: '150', height: '150') %>
                <h3><%= link_to(food.name, food) %></h3>
                <p>Cost: <%= food.cost %></p>
                <p>Measurements: <%= food.measurement %></p>
              </div>
          <% end %>
    <% end %>
  </div>  
</div>




