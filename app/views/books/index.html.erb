
<ul class="nav nav-pills">
  <li>
    <%= link_to('New Book', new_book_path) %>
  </li>
</ul>

<% @books.each do |book| %>
  <div class="row">
     <div class="col-md-3 col-sm-3">
      <p class="lead"><%= link_to(book.title, book, {:class=> "book_link_style"}) %></p>
      <p class="text-info"><%= book.cuisine %></p>
      <p class="text-warning"><%= book.chef %></p>
    </div>
    <div class="col-md-8 col-sm-8">
      <%= image_tag(book.image) %>
    </div>
  </div>
<% end %>

